<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text_cell_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="셀 타이틀(이름)"
        />

    <TextView
        android:id="@+id/text_cell_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_cell_title"
        android:layout_centerHorizontal="true"
        android:text="위치"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_cell_location"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/text_cell_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작시간"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            />
        <TextView
            android:id="@+id/text_cell_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="끝시간"
            />
    </LinearLayout>


</RelativeLayout>